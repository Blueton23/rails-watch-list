<h1><%= @list.name %></h1>
<div class="row row-cols-3">
  <% @list.bookmarks.each do |bookmark| %>
    <div class="card-product">
      <%= image_tag(bookmark.movie.poster_url) %>
      <div class="card-product-infos">
        <h2><%= bookmark.movie.title %></h2>
        <p><%= bookmark.movie.overview %></p>
        <small><%= bookmark.comment %></small>
      </div>
      <%= link_to 'Delete', list_path(@list), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-danger"%>
    </div>
  <% end %>
</div>
<%= link_to "add a movie", new_list_bookmark_path(@list), class: "btn btn-success mt-3" %>
